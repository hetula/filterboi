<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="xyz.hetula.filterboi.FilterBoiView"
            prefHeight="768.0" prefWidth="1024.0">
    <top>
        <HBox spacing="4.0" alignment="CENTER_LEFT">
            <padding>
                <Insets topRightBottomLeft="4.0"/>
            </padding>
            <TextField fx:id="txtFilter" promptText="Filter..." prefColumnCount="32"/>
            <CheckBox fx:id="chkNotMatching" text="Not matching" onAction="#onNotMatchingClick"/>
            <CheckBox fx:id="chkRegex" text="Regex" onAction="#onRegexClick"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Import" onAction="#onImportClick"/>
        </HBox>
    </top>

    <center>
        <BorderPane>
            <center>
                <TextArea fx:id="logArea" editable="false"/>
            </center>
            <right>
                <ScrollBar fx:id="logScrollBar" visible="false" orientation="VERTICAL" max="1.0"/>
            </right>
        </BorderPane>
    </center>

    <bottom>
        <ToolBar>
            <Label fx:id="lblLines"/>
            <Label fx:id="lblSearchTime"/>
        </ToolBar>
    </bottom>
</BorderPane>
